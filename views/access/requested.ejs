<%- include('../partials/header_layout') %>
    <div class="container py-16 max-w-2xl">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-8 text-center">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Access Request</h1>
            <p class="text-sm text-gray-500 mb-6">Your request has been routed to administrators for review.</p>
            <% if (success) { %>
                <div class="mb-4 rounded-md bg-green-50 p-3 border border-green-200 text-green-700 text-sm"><%= success %></div>
            <% } %>
            <% if (error) { %>
                <div class="mb-4 rounded-md bg-red-50 p-3 border border-red-200 text-red-700 text-sm"><%= error %></div>
            <% } %>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
                <a href="/admin" class="btn btn-sm btn-primary">Admin Dashboard</a>
                <a href="/" class="btn btn-sm btn-secondary">Return Home</a>
            </div>
        </div>
    </div>
<%- include('../partials/footer_layout') %>
