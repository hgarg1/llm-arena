<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin' %> | LLM Arena Admin</title>
    <link rel="icon" type="image/svg+xml" href="/img/icon.svg">
    <link rel="apple-touch-icon" href="/img/icon.svg">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#0f172a">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>[x-cloak]{display:none !important;}</style>
</head>
<body class="min-h-screen font-sans bg-gray-50 flex" x-data="{ sidebarOpen: false }">
    <div class="lg:hidden fixed inset-0 z-30 bg-slate-900/40 backdrop-blur-sm" x-show="sidebarOpen" x-cloak @click="sidebarOpen = false"></div>
    
    <!-- Admin Sidebar -->
    <aside class="w-64 bg-slate-900 text-white flex flex-col fixed inset-y-0 left-0 border-r border-slate-800 z-40 transform transition-transform duration-200 lg:translate-x-0" :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'">
        <div class="h-16 flex items-center px-6 border-b border-slate-800">
            <span class="font-bold text-lg tracking-wider">LLM ADMIN</span>
            <button type="button" class="ml-auto lg:hidden text-xs uppercase tracking-widest text-slate-400 border border-slate-700 px-2 py-1" @click="sidebarOpen = false">Close</button>
        </div>
        
        <nav class="flex-1 px-4 py-6 space-y-1">
            <% if (typeof can === 'function' && can('admin.dashboard.view')) { %>
            <a href="/admin" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path === '/admin') ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
                Dashboard
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.users.view')) { %>
            <a href="/admin/users" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/users')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                Users
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.models.view')) { %>
            <a href="/admin/models" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/models')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
                Models
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.matches.view')) { %>
            <a href="/admin/matches" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/matches')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                Match Ops
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.queue.view')) { %>
            <a href="/admin/queue" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/queue')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" /></svg>
                Queue
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.analytics.view')) { %>
            <a href="/admin/analytics" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/analytics')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                Analytics
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.approvals.view')) { %>
            <a href="/admin/approvals" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/approvals')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5 1a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                Approvals
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.audit.view')) { %>
            <a href="/admin/audit" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/audit')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a4 4 0 014-4h4M7 7h10M7 11h6" /></svg>
                Audit Log
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.content.view')) { %>
            <a href="/admin/content" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/content')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                Content
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.games.view')) { %>
            <a href="/admin/games" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/games')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                Games
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.media.view')) { %>
            <a href="/admin/media" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/media')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                Media
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.settings.view')) { %>
            <a href="/admin/settings" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/settings')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 00-1.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                Settings
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.entitlements.view')) { %>
            <a href="/admin/entitlements" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/entitlements')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.12-3 2.5S10.343 13 12 13s3-1.12 3-2.5S13.657 8 12 8zm0 0V6m0 7v5m-4-3h8" /></svg>
                Entitlements
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.plans.view')) { %>
            <a href="/admin/plans" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/plans')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-3-3v6m6 4H6a2 2 0 01-2-2V7a2 2 0 012-2h6l6 6v8a2 2 0 01-2 2z" /></svg>
                Plans
            </a>
            <% } %>
            <% if (typeof can === 'function' && can('admin.rbac.view')) { %>
            <a href="/admin/rbac" class="flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof path !== 'undefined' && path && path.startsWith('/admin/rbac')) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:bg-slate-800 hover:text-white' %>">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 00-2 2v2m2-4a2 2 0 012 2v2m0 0a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2v-6a2 2 0 012-2m4 0h4" /></svg>
                RBAC
            </a>
            <% } %>
            <a href="/" class="flex items-center px-2 py-2 text-sm font-medium rounded-md text-slate-300 hover:bg-slate-800 hover:text-white mt-8">
                <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                Back to App
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-0 lg:ml-64 p-4 lg:p-8 overflow-y-auto h-screen">
        <div class="lg:hidden mb-4 flex items-center justify-between bg-white border border-gray-200 rounded-lg px-4 py-3 shadow-sm">
            <div class="text-sm font-semibold text-slate-800">Admin Console</div>
            <button type="button" class="text-xs uppercase tracking-widest text-slate-500 border border-slate-200 px-3 py-2" @click="sidebarOpen = true">Menu</button>
        </div>
