<%- include('../partials/header_layout') %>
    <div class="min-h-[calc(100vh-60px)] flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-background">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-primary">
                Sign In
            </h2>
            <p class="mt-2 text-center text-sm text-secondary">
                Access the LLM Arena Evaluation Platform
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-surface py-8 px-4 shadow sm:rounded-lg sm:px-10 border border-border">
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="mb-4 rounded-md bg-red-50 p-4 border border-red-200">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800"><%= error %></h3>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- SSO Section -->
                <div class="grid grid-cols-3 gap-3 mb-6">
                    <button class="flex items-center justify-center w-full px-4 py-2 border border-border rounded-md shadow-sm bg-white text-sm font-medium text-secondary hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-colors" title="Sign in with Google">
                        <span class="font-bold font-sans text-blue-600">G</span>
                    </button>
                    <button class="flex items-center justify-center w-full px-4 py-2 border border-border rounded-md shadow-sm bg-white text-sm font-medium text-secondary hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-colors" title="Sign in with Microsoft">
                        <span class="font-bold font-sans text-orange-600">M</span>
                    </button>
                    <button class="flex items-center justify-center w-full px-4 py-2 border border-border rounded-md shadow-sm bg-white text-sm font-medium text-secondary hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-colors" title="Sign in with Apple">
                        <span class="font-bold font-sans text-black">ï£¿</span>
                    </button>
                </div>

                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-border"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="bg-surface px-2 text-secondary">
                            Or continue with credentials
                        </span>
                    </div>
                </div>

                <form action="/auth/login" method="POST" class="space-y-6" <%= settings && settings['auth_passkey_enabled'] !== 'false' ? 'x-data="passkeyLogin()"' : '' %>>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% if (settings && settings['auth_passkey_enabled'] !== 'false') { %>
                        <!-- Passkey Button -->
                        <button type="button" @click="authenticate()" class="btn btn-secondary w-full flex justify-center py-2.5 mb-4 border-2 border-dashed hover:border-accent hover:text-accent transition-colors">
                            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" /></svg>
                            Sign in with Passkey
                        </button>
                    <% } %>
                    
                    <div class="relative flex py-2 items-center">
                        <div class="flex-grow border-t border-border"></div>
                        <span class="flex-shrink-0 mx-4 text-gray-400 text-xs uppercase">Or Password</span>
                        <div class="flex-grow border-t border-border"></div>
                    </div>

                    <div>
                        <label for="email" class="input-label">Email Address</label>
                        <div class="mt-1">
                            <input id="email" name="email" type="email" autocomplete="email" required 
                                   class="input-field"
                                   placeholder="name@organization.com">
                        </div>
                    </div>

                    <div>
                        <div class="flex items-center justify-between">
                            <label for="password" class="input-label mb-0">Password</label>
                            <div class="text-sm">
                                <a href="/auth/forgot-password" class="font-medium text-accent hover:text-accent/80">
                                    Forgot your password?
                                </a>
                            </div>
                        </div>
                        <div class="mt-1">
                            <input id="password" name="password" type="password" autocomplete="current-password" required 
                                   class="input-field">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <label class="flex items-center gap-2 text-sm text-secondary">
                            <input type="checkbox" name="remember_me" class="rounded border-border text-accent focus:ring-accent">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-full flex justify-center py-2.5">
                            Sign In
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-sm text-secondary">
                        Don't have an account? 
                        <a href="/auth/signup" class="font-medium text-accent hover:text-accent/80">Initialize Account</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <% if (settings && settings['auth_passkey_enabled'] !== 'false') { %>
    <script src="https://unpkg.com/@simplewebauthn/browser/dist/bundle/index.umd.min.js"></script>
    <script>
        function passkeyLogin() {
            return {
                async authenticate() {
                    try {
                        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                        const resp = await fetch('/auth/passkey/auth/options', { 
                            method: 'POST',
                            headers: { 'X-CSRF-Token': csrfToken }
                        });
                        if (!resp.ok) {
                            const err = await resp.json().catch(() => ({}));
                            throw new Error(err.error || 'Failed to load passkey options');
                        }
                        const opts = await resp.json();
                        const publicKey = opts.publicKey?.challenge ? opts.publicKey : opts;
                        if (!publicKey.challenge) {
                            throw new Error('Passkey options missing challenge');
                        }
                        
                        const asResp = await SimpleWebAuthnBrowser.startAuthentication(publicKey);
                        
                        const verifyResp = await fetch('/auth/passkey/auth/verify', {
                            method: 'POST',
                            headers: { 
                                'Content-Type': 'application/json',
                                'X-CSRF-Token': csrfToken
                            },
                            body: JSON.stringify(asResp),
                        });
                        
                        const verification = await verifyResp.json();
                        if (verification.verified) {
                            window.location.href = '/';
                        } else {
                            alert('Authentication failed');
                        }
                    } catch (e) {
                        console.error(e);
                        alert('Passkey login failed: ' + e.message);
                    }
                }
            }
        }
    </script>
    <% } %>
<%- include('../partials/footer_layout') %>
