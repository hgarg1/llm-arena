<link href="https://cdnjs.cloudflare.com/ajax/libs/gridstack.js/10.1.2/gridstack.min.css" rel="stylesheet"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gridstack.js/10.1.2/gridstack-all.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Server Data Injection -->
<script>
    window.SERVER_DATA = {
        layout: <%- layout && layout !== 'undefined' && layout !== 'null' ? layout : 'null' %>,
        stats: <%- JSON.stringify(stats) %>,
        matchesByGame: <%- JSON.stringify(matchesByGame || []) %>,
        recentSignups: <%- JSON.stringify(recentSignups || []) %>,
        recentMatches: <%- JSON.stringify(recentMatches || []) %>,
        auditLogs: <%- JSON.stringify(auditLogs || []) %>
    };
    
    // Default dashboard layout if none exists
    if (!window.SERVER_DATA.layout) {
        window.SERVER_DATA.layout = [
            // Row 1: Core Stats
            { id: 'stat-users', x: 0, y: 0, w: 3, h: 2, type: 'stat-card', config: { title: 'Total Users', label: 'Registered', valueKey: 'userCount', color: 'blue' } },
            { id: 'stat-revenue', x: 3, y: 0, w: 3, h: 2, type: 'stat-card', config: { title: 'Active Subs', label: 'Stripe Active', valueKey: 'activeSubscriptions', color: 'emerald' } },
            { id: 'stat-models', x: 6, y: 0, w: 3, h: 2, type: 'stat-card', config: { title: 'AI Models', label: 'Registered', valueKey: 'modelCount', color: 'purple' } },
            { id: 'stat-matches', x: 9, y: 0, w: 3, h: 2, type: 'stat-card', config: { title: 'Matches', label: 'Total Played', valueKey: 'matchCount', color: 'indigo' } },
            
            // Row 2: Operations & HR
            { id: 'stat-queue', x: 0, y: 2, w: 3, h: 2, type: 'stat-card', config: { title: 'Queue Work', label: 'Active/Waiting', valueKeyPath: 'queueCounts', color: 'yellow' } },
            { id: 'stat-hr', x: 3, y: 2, w: 3, h: 2, type: 'stat-card', config: { title: 'Open Roles', label: 'Published Jobs', valueKey: 'openJobs', color: 'rose' } },
            { id: 'stat-apps', x: 6, y: 2, w: 3, h: 2, type: 'stat-card', config: { title: 'Applications', label: 'Total Received', valueKey: 'totalApplications', color: 'orange' } },
            { id: 'stat-approvals', x: 9, y: 2, w: 3, h: 2, type: 'stat-card', config: { title: 'Approvals', label: 'Pending Access', valueKey: 'pendingApprovals', color: 'cyan' } },

            // Row 3: Visuals & Logs
            { id: 'matches-dist-chart', x: 0, y: 4, w: 4, h: 4, type: 'chart', config: { title: 'Match Distribution', chartType: 'doughnut' } },
            { id: 'recent-matches-tbl', x: 4, y: 4, w: 4, h: 4, type: 'table', config: { title: 'Recent Match Activity', source: 'recentMatches' } },
            { id: 'audit-log-tbl', x: 8, y: 4, w: 4, h: 4, type: 'table', config: { title: 'System Security Log', source: 'auditLogs' } },

            // Row 4: Chat & Health
            { id: 'stat-chat', x: 0, y: 8, w: 3, h: 2, type: 'stat-card', config: { title: 'Chat Traffic', label: 'Messages Today', valueKey: 'messagesToday', color: 'sky' } },
            { id: 'system-health-widget', x: 3, y: 8, w: 9, h: 2, type: 'system-health' }
        ];
    }
</script>

