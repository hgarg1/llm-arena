<script>
    function adminDashboard() {
        return {
            editing: false,
            showAddModal: false,
            editingWidgetId: null,
            grid: null,
            serverData: window.SERVER_DATA,
            newWidget: { type: null, config: { title: '', valueKey: 'userCount', source: 'recentMatches', color: 'indigo', chartType: 'doughnut' } },

            init() {
                setTimeout(() => this.initGrid(), 100);
            },

            initGrid() {
                this.grid = GridStack.init({
                    column: 12,
                    cellHeight: 100,
                    margin: 12,
                    staticGrid: true,
                    animate: true,
                    float: true,
                    handle: '.handle'
                });

                this.loadLayout();
            },

            toggleEdit() {
                this.editing = !this.editing;
                this.grid.setStatic(!this.editing);
                document.querySelectorAll('.widget-remove-btn, .widget-config-btn').forEach(b => b.classList.toggle('hidden', !this.editing));
            },

            loadLayout() {
                this.serverData.layout.forEach(node => {
                    this.renderWidget(node);
                });
            },

            selectTemplate(type) {
                this.newWidget.type = type;
                if (!this.newWidget.config.title) {
                    this.newWidget.config.title = type.replace('-', ' ').toUpperCase();
                }
            },

            renderWidget(node) {
                const templateId = 'widget-' + node.type;
                const template = document.getElementById(templateId);
                if (!template) return;

                let content = template.outerHTML;
                const widgetId = node.id;

                this.grid.addWidget({
                    id: widgetId,
                    x: node.x, y: node.y, w: node.w, h: node.h,
                    content: content.replace(`id="${templateId}"`, `id="inst-${widgetId}"`),
                    autoPosition: !node.x && node.x !== 0
                });

                this.hydrateWidget(widgetId, node);
            },

            hydrateWidget(id, node) {
                const el = document.getElementById('inst-' + id);
                if (!el) return;

                // Set Title (Renaming support)
                const titleEl = el.querySelector('.widget-title');
                if (titleEl && node.config?.title) titleEl.textContent = node.config.title;

                // Action Buttons
                const removeBtn = el.querySelector('.widget-remove-btn');
                if (removeBtn) {
                    removeBtn.onclick = () => this.grid.removeWidget(el.closest('.grid-stack-item'));
                    if (!this.editing) removeBtn.classList.add('hidden');
                }

                const configBtn = el.querySelector('.widget-config-btn');
                if (configBtn) {
                    configBtn.onclick = () => this.editWidget(id, node);
                    if (!this.editing) configBtn.classList.add('hidden');
                }

                // Hydration
                if (node.type === 'stat-card') {
                    let val = 0;
                    if (node.config.valueKeyPath === 'queueCounts') {
                        val = (this.serverData.stats.queueCounts.waiting || 0) + (this.serverData.stats.queueCounts.active || 0);
                    } else {
                        val = this.serverData.stats[node.config.valueKey] || 0;
                    }
                    el.querySelector('.widget-value').textContent = val.toLocaleString();
                    el.querySelector('.widget-label').textContent = node.config.label || node.config.title || '';
                    if (node.config.color) {
                        const iconCont = el.querySelector('.widget-icon');
                        iconCont.className = `p-3 rounded-full bg-${node.config.color}-50 text-${node.config.color}-600 widget-icon`;
                    }
                }

                if (node.type === 'table') {
                    const tbody = el.querySelector('.widget-table-body');
                    const thead = el.querySelector('.widget-table-head');
                    const data = this.serverData[node.config.source] || [];
                    
                    if (node.config.source === 'recentMatches') {
                        thead.innerHTML = '<th class="px-4 py-2">Match</th><th class="px-4 py-2 text-right">Status</th>';
                        tbody.innerHTML = data.map(m => `<tr><td class="px-4 py-2 font-mono text-blue-600"><a href="/matches/${m.id}">${m.id.substring(0,8)}</a></td><td class="px-4 py-2 text-right"><span class="px-2 py-0.5 rounded-full ${m.status === 'COMPLETED' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700'}">${m.status}</span></td></tr>`).join('');
                    } else if (node.config.source === 'recentSignups') {
                        thead.innerHTML = '<th class="px-4 py-2">User</th><th class="px-4 py-2 text-right">Joined</th>';
                        tbody.innerHTML = data.map(u => `<tr><td class="px-4 py-2">${u.email} <span class="text-[10px] bg-slate-100 px-1 rounded">${u.tier}</span></td><td class="px-4 py-2 text-right text-gray-400">${new Date(u.created_at).toLocaleDateString()}</td></tr>`).join('');
                    } else if (node.config.source === 'auditLogs') {
                        thead.innerHTML = '<th class="px-4 py-2">Admin</th><th class="px-4 py-2 text-right">Action</th>';
                        tbody.innerHTML = data.map(l => `<tr><td class="px-4 py-2">${l.admin?.email || 'System'}</td><td class="px-4 py-2 text-right font-mono">${l.action}</td></tr>`).join('');
                    }
                }

                if (node.type === 'chart') {
                    const canvas = el.querySelector('canvas');
                    canvas.id = 'canvas-' + id;
                    setTimeout(() => {
                        new Chart(canvas, {
                            type: node.config.chartType || 'bar',
                            data: {
                                labels: this.serverData.matchesByGame.map(g => g.game_type),
                                datasets: [{
                                    data: this.serverData.matchesByGame.map(g => g._count.id),
                                    backgroundColor: ['#6366f1', '#10b981', '#f59e0b', '#ef4444', '#ec4899']
                                }]
                            },
                            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: node.config.chartType === 'doughnut' } } }
                        });
                    }, 50);
                }
            },

            editWidget(id, node) {
                this.editingWidgetId = id;
                this.newWidget.type = node.type;
                this.newWidget.config = JSON.parse(JSON.stringify(node.config));
                this.showAddModal = true;
            },

            addWidget() {
                if (this.editingWidgetId) {
                    const idx = this.serverData.layout.findIndex(n => n.id === this.editingWidgetId);
                    if (idx > -1) {
                        this.serverData.layout[idx].config = JSON.parse(JSON.stringify(this.newWidget.config));
                        // Update DOM directly
                        this.hydrateWidget(this.editingWidgetId, this.serverData.layout[idx]);
                    }
                    this.editingWidgetId = null;
                } else {
                    const id = 'w-' + Date.now();
                    const node = {
                        id,
                        type: this.newWidget.type,
                        config: JSON.parse(JSON.stringify(this.newWidget.config)),
                        w: this.newWidget.type === 'stat-card' ? 3 : 6,
                        h: this.newWidget.type === 'stat-card' ? 2 : 4
                    };
                    this.serverData.layout.push(node);
                    this.renderWidget(node);
                }
                this.showAddModal = false;
            },

            async saveLayout() {
                const gridItems = this.grid.save(false);
                const currentLayout = gridItems.map(item => {
                    const existing = this.serverData.layout.find(l => l.id === item.id);
                    if (existing) {
                        return { ...existing, x: item.x, y: item.y, w: item.w, h: item.h };
                    }
                    return item;
                });

                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    await fetch('/admin/analytics/layout', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': csrfToken },
                        body: JSON.stringify({ layout: currentLayout })
                    });
                    this.serverData.layout = currentLayout;
                    this.toggleEdit();
                    window.adminAlert('Command Center configuration saved successfully.', 'success', 'Saved');
                } catch(e) {
                    window.adminAlert('Failed to synchronize dashboard layout.', 'danger', 'Error');
                }
            }
        }
    }
</script>

