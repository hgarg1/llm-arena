<%- include('../partials/admin_header') %>
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
        <p class="mt-1 text-sm text-gray-500">System overview and health metrics.</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 truncate">Total Users</p>
                    <p class="text-2xl font-bold text-gray-900"><%= stats.userCount %></p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 truncate">Registered Models</p>
                    <p class="text-2xl font-bold text-gray-900"><%= stats.modelCount %></p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 truncate">Total Matches</p>
                    <p class="text-2xl font-bold text-gray-900"><%= stats.matchCount %></p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 truncate">Queued Jobs</p>
                    <p class="text-2xl font-bold text-gray-900"><%= stats.queueCounts.waiting + stats.queueCounts.active %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
        <!-- Queue Health -->
        <div class="bg-white rounded-lg shadow border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="font-bold text-gray-900">System Health</h3>
            </div>
            <div class="p-6 grid grid-cols-2 gap-4">
                <div class="bg-slate-50 p-4 rounded text-center">
                    <div class="text-sm text-gray-500">Active Jobs</div>
                    <div class="text-xl font-mono font-bold text-blue-600"><%= stats.queueCounts.active %></div>
                </div>
                <div class="bg-slate-50 p-4 rounded text-center">
                    <div class="text-sm text-gray-500">Waiting</div>
                    <div class="text-xl font-mono font-bold text-yellow-600"><%= stats.queueCounts.waiting %></div>
                </div>
                <div class="bg-slate-50 p-4 rounded text-center">
                    <div class="text-sm text-gray-500">Failed</div>
                    <div class="text-xl font-mono font-bold text-red-600"><%= stats.queueCounts.failed %></div>
                </div>
                <div class="bg-slate-50 p-4 rounded text-center">
                    <div class="text-sm text-gray-500">Completed</div>
                    <div class="text-xl font-mono font-bold text-green-600"><%= stats.queueCounts.completed %></div>
                </div>
            </div>
        </div>

        <!-- Recent Matches -->
        <div class="bg-white rounded-lg shadow border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="font-bold text-gray-900">Recent Activity</h3>
            </div>
            <div class="p-0 overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Match ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created By</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% recentMatches.forEach(m => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-xs font-mono text-gray-500">
                                    <a href="/matches/<%= m.id %>" class="hover:underline text-blue-600"><%= m.id.substring(0,8) %></a>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        <%= m.status === 'COMPLETED' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                        <%= m.status %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-xs text-gray-500">
                                    <%= m.created_by ? m.created_by.email : 'System' %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('../partials/admin_footer') %>
