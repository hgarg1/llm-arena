<%- include('../../partials/admin_header') %>
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Game Builder</h1>
            <p class="mt-1 text-sm text-gray-500">Create, schedule, and manage games across the platform.</p>
        </div>
        <% if (typeof can === 'function' && can('admin.games.edit')) { %>
        <form action="/admin/games/new" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-sm btn-primary">+ New Game</button>
        </form>
        <% } %>
    </div>

    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Game</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tier Gate</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Updated</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                <% games.forEach(game => { 
                    const release = game.releases && game.releases[0];
                %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="text-sm font-semibold text-gray-900"><%= game.name %></div>
                            <div class="text-xs font-mono text-gray-500"><%= game.key %></div>
                        </td>
                        <td class="px-6 py-4 text-sm">
                            <span class="px-2 py-1 text-xs rounded <%= game.status === 'LIVE' ? 'bg-green-100 text-green-700' : (game.status === 'SCHEDULED' ? 'bg-blue-100 text-blue-700' : (game.status === 'RETIRED' ? 'bg-gray-200 text-gray-600' : 'bg-amber-100 text-amber-700')) %>">
                                <%= game.status %>
                            </span>
                            <% if (release && release.publish_at) { %>
                                <div class="text-[11px] text-gray-500 mt-1">Publishes: <%= new Date(release.publish_at).toLocaleString() %></div>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            <%= (game.settings || []).reduce((tier, s) => {
                                if (s.tier_required === 'ENTERPRISE') return 'Enterprise';
                                if (s.tier_required === 'PRO') return tier === 'Enterprise' ? tier : 'Pro+';
                                return tier || 'Free+';
                            }, '') || 'Free+' %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= new Date(game.updated_at).toLocaleDateString() %>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/admin/games/<%= game.id %>?step=basics" class="btn btn-xs btn-secondary">Edit</a>
                                <% if (typeof can === 'function' && can('admin.games.edit')) { %>
                                <form action="/admin/games/<%= game.id %>/delete" method="POST" onsubmit="return confirm('Delete this game? This cannot be undone.');">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn btn-xs btn-ghost text-red-600">Delete</button>
                                </form>
                                <% } %>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% if (games.length === 0) { %>
            <div class="p-8 text-center text-gray-500">No games yet. Create your first game.</div>
        <% } %>
    </div>
<%- include('../../partials/admin_footer') %>
