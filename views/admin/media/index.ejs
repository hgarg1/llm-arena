<%- include('../../partials/admin_header') %>
    <div class="mb-8 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Media Library</h1>
            <p class="mt-1 text-sm text-gray-500">Manage assets in /public/img and user uploads.</p>
        </div>
    </div>

    <% if (success) { %>
        <div class="mb-6 rounded-md bg-green-50 p-4 border border-green-200 text-green-700 text-sm"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="mb-6 rounded-md bg-red-50 p-4 border border-red-200 text-red-700 text-sm"><%= error %></div>
    <% } %>

    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 space-y-4">
        <div class="flex flex-col lg:flex-row gap-4 items-start lg:items-end">
            <form action="/admin/media" method="GET" class="flex-1 min-w-[240px]">
                <label class="text-xs font-medium text-gray-600">Browse folder</label>
                <div class="flex gap-2 mt-1">
                    <select name="folder" class="flex-1 px-3 py-2 border border-gray-300 rounded text-sm">
                        <% folders.forEach(folder => { %>
                            <option value="<%= folder %>" <%= currentFolder === folder ? 'selected' : '' %>>
                                <%= folder ? folder : 'Root (img)' %>
                            </option>
                        <% }) %>
                    </select>
                    <button class="btn btn-sm btn-secondary">Go</button>
                </div>
            </form>
            <% if (typeof can === 'function' && can('admin.media.delete')) { %>
            <form action="/admin/media/folders/delete" method="POST" class="min-w-[200px]" data-confirm="Delete this folder? Folder must be empty.">
                <label class="text-xs font-medium text-gray-600">Delete folder</label>
                <div class="flex gap-2 mt-1">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="folder" value="<%= currentFolder %>">
                    <button class="btn btn-sm btn-ghost text-red-600" <%= !currentFolder ? 'disabled' : '' %>>Delete</button>
                </div>
            </form>
            <% } %>
            <div class="flex-1 min-w-[240px]">
                <label class="text-xs font-medium text-gray-600">Search assets</label>
                <input id="mediaSearch" type="text" placeholder="Search by filename" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
            </div>
        </div>
        <% if (typeof can === 'function' && can('admin.media.upload')) { %>
        <div class="grid lg:grid-cols-2 gap-4">
            <form action="/admin/media/upload" method="POST" enctype="multipart/form-data" class="flex flex-col gap-2">
                <label class="text-xs font-medium text-gray-600">Upload to folder</label>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="flex flex-col md:flex-row gap-2">
                    <select name="folder" class="md:w-1/2 px-3 py-2 border border-gray-300 rounded text-sm">
                        <% folders.forEach(folder => { %>
                            <option value="<%= folder %>" <%= currentFolder === folder ? 'selected' : '' %>>
                                <%= folder ? folder : 'Root (img)' %>
                            </option>
                        <% }) %>
                    </select>
                    <input type="file" name="file" class="flex-1 text-sm file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                    <button class="btn btn-sm btn-primary">Upload</button>
                </div>
                <div class="text-[11px] text-gray-500">Uploads are scanned for malware before being saved.</div>
            </form>
            <form action="/admin/media/folders" method="POST" class="flex flex-col gap-2">
                <label class="text-xs font-medium text-gray-600">Create new folder</label>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="flex flex-col md:flex-row gap-2">
                    <select name="parent" class="md:w-1/2 px-3 py-2 border border-gray-300 rounded text-sm">
                        <% folders.forEach(folder => { %>
                            <option value="<%= folder %>" <%= currentFolder === folder ? 'selected' : '' %>>
                                <%= folder ? folder : 'Root (img)' %>
                            </option>
                        <% }) %>
                    </select>
                    <input type="text" name="name" placeholder="folder-name" class="flex-1 px-3 py-2 border border-gray-300 rounded text-sm" required>
                    <button class="btn btn-sm btn-secondary">Create</button>
                </div>
                <div class="text-[11px] text-gray-500">Folder names: letters, numbers, dashes, underscores.</div>
            </form>
        </div>
        <% } %>
    </div>

    <div class="space-y-8">
        <section>
            <div class="flex items-center justify-between mb-4 border-b pb-2">
                <div>
                    <h3 class="text-lg font-bold text-gray-800">Media Assets</h3>
                    <p class="text-xs text-gray-500">Folder: <%= currentFolder ? currentFolder : 'Root (img)' %></p>
                </div>
                <span class="text-xs text-gray-500"><%= images.length %> files</span>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4" id="mediaGrid">
                <% images.forEach(img => { 
                    const url = `/img/${img.relPath}`;
                %>
                    <div class="group relative bg-gray-100 rounded-lg overflow-hidden border border-gray-200" data-media-item data-name="<%= img.name.toLowerCase() %>">
                        <div class="aspect-square">
                            <img src="<%= url %>" class="w-full h-full object-cover">
                        </div>
                        <div class="p-2 bg-white text-xs space-y-1">
                            <div class="font-medium text-gray-800 truncate" title="<%= img.name %>"><%= img.name %></div>
                            <div class="text-gray-500"><%= (img.size / 1024).toFixed(1) %> KB</div>
                            <div class="text-gray-400"><%= new Date(img.modified).toLocaleDateString() %></div>
                            <div class="flex items-center justify-between">
                                <button type="button" class="text-indigo-600 text-[11px] hover:underline" data-copy="<%= url %>">Copy URL</button>
                                <% if (typeof can === 'function' && can('admin.media.delete')) { %>
                                <form action="/admin/media/delete" method="POST" data-confirm="Delete this file?">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" name="filename" value="<%= img.name %>">
                                    <input type="hidden" name="dir" value="img/<%= currentFolder %>">
                                    <button class="text-[11px] text-red-600 hover:underline">Delete</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
                <% if (images.length === 0) { %>
                    <div class="col-span-full text-sm text-gray-500">No files found in this folder.</div>
                <% } %>
            </div>
        </section>

        <section>
            <div class="flex items-center justify-between mb-4 border-b pb-2">
                <div>
                    <h3 class="text-lg font-bold text-gray-800">User Avatars</h3>
                    <p class="text-xs text-gray-500">/public/uploads/avatars</p>
                </div>
                <span class="text-xs text-gray-500"><%= avatarImages.length %> files</span>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                <% avatarImages.forEach(img => { 
                    const url = `/uploads/avatars/${img.relPath}`;
                %>
                    <div class="group relative bg-gray-100 rounded-lg overflow-hidden border border-gray-200">
                        <div class="aspect-square">
                            <img src="<%= url %>" class="w-full h-full object-cover">
                        </div>
                        <div class="p-2 bg-white text-xs space-y-1">
                            <div class="font-medium text-gray-800 truncate" title="<%= img.name %>"><%= img.name %></div>
                            <div class="text-gray-500"><%= (img.size / 1024).toFixed(1) %> KB</div>
                            <div class="text-gray-400"><%= new Date(img.modified).toLocaleDateString() %></div>
                            <div class="flex items-center justify-between">
                                <button type="button" class="text-indigo-600 text-[11px] hover:underline" data-copy="<%= url %>">Copy URL</button>
                                <% if (typeof can === 'function' && can('admin.media.delete')) { %>
                                <form action="/admin/media/delete" method="POST" data-confirm="Delete this file?">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" name="filename" value="<%= img.name %>">
                                    <input type="hidden" name="dir" value="uploads/avatars">
                                    <button class="text-[11px] text-red-600 hover:underline">Delete</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
                <% if (avatarImages.length === 0) { %>
                    <div class="col-span-full text-sm text-gray-500">No avatars found.</div>
                <% } %>
            </div>
        </section>
    </div>
<%- include('../../partials/admin_footer') %>
<script>
    (function () {
        const searchInput = document.getElementById('mediaSearch');
        const mediaItems = Array.from(document.querySelectorAll('[data-media-item]'));
        if (searchInput) {
            searchInput.addEventListener('input', () => {
                const term = searchInput.value.toLowerCase().trim();
                mediaItems.forEach(item => {
                    const name = item.getAttribute('data-name') || '';
                    item.style.display = !term || name.includes(term) ? '' : 'none';
                });
            });
        }
        document.querySelectorAll('[data-confirm]').forEach(formEl => {
            formEl.addEventListener('submit', (event) => {
                const message = formEl.getAttribute('data-confirm') || 'Are you sure?';
                if (!confirm(message)) {
                    event.preventDefault();
                }
            });
        });
        document.querySelectorAll('[data-copy]').forEach(button => {
            button.addEventListener('click', async () => {
                const value = button.getAttribute('data-copy') || '';
                if (!value) return;
                try {
                    await navigator.clipboard.writeText(value);
                    button.textContent = 'Copied';
                    setTimeout(() => { button.textContent = 'Copy URL'; }, 1500);
                } catch (err) {
                    button.textContent = 'Failed';
                    setTimeout(() => { button.textContent = 'Copy URL'; }, 1500);
                }
            });
        });
    })();
</script>
