<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    function aiChat() {
        return {
            chats: <%- JSON.stringify(chats || []) %>,
            activeChatId: null,
            messages: [],
            input: '',
            loading: false,
            modelsLoading: false,
            uploading: false,
            uploadProgress: 0,
            attachments: [],
            provider: 'openai',
            model: '',
            models: [],
            providers: <%- JSON.stringify(providers) %>,
            
            get currentChatTitle() {
                if (!this.activeChatId) return 'Administrative AI';
                const chat = this.chats.find(c => c.id === this.activeChatId);
                return chat ? chat.title : 'Administrative AI';
            },

            init() {
                const initialChatId = "<%= selectedChatId || '' %>";
                this.fetchModels().then(() => {
                    if (initialChatId) {
                        this.selectChat(initialChatId);
                    } else if (this.chats.length > 0) {
                        this.selectChat(this.chats[0].id);
                    }
                });
            },

            async fetchModels() {
                this.modelsLoading = true;
                this.models = [];
                try {
                    const resp = await fetch(`/admin/ai-chat/models/${this.provider}`);
                    const data = await resp.json();
                    this.models = data.models || [];
                    if (this.models.length > 0 && !this.model) {
                        this.model = this.models[0];
                    }
                } catch (e) {
                    console.error('Failed to fetch models', e);
                } finally {
                    this.modelsLoading = false;
                }
            },

            async createNewChat() {
                try {
                    this.loading = true;
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    const resp = await fetch('/admin/ai-chat', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': csrfToken },
                        body: JSON.stringify({ provider: this.provider, model: this.model })
                    });
                    
                    if (!resp.ok) {
                        const err = await resp.json();
                        throw new Error(err.error);
                    }

                    const newChat = await resp.json();
                    this.chats.unshift(newChat);
                    this.selectChat(newChat.id);
                    return newChat;
                } catch (e) {
                    window.adminAlert('Failed to create chat: ' + e.message, 'danger');
                } finally {
                    this.loading = false;
                }
            },

            quickAsk(text) {
                if (!this.activeChatId) {
                    this.createNewChat().then((chat) => {
                        if(chat) {
                            this.input = text;
                            this.sendMessage();
                        }
                    });
                } else {
                    this.input = text;
                    this.sendMessage();
                }
            },

            async selectChat(id) {
                if (this.activeChatId === id) return;
                
                this.activeChatId = id;
                this.loading = true;
                this.messages = [];
                
                try {
                    const resp = await fetch(`/admin/ai-chat/${id}`);
                    const chat = await resp.json();
                    this.messages = chat.messages || [];
                    
                    // Sync provider/model
                    if (chat.provider) this.provider = chat.provider;
                    if (chat.model_id) this.model = chat.model_id;

                    this.scrollToBottom();
                } catch (e) {
                    console.error('Failed to load chat', e);
                    window.adminAlert('Failed to load chat history', 'danger');
                } finally {
                    this.loading = false;
                }
            },

            async deleteChat(id) {
                if (!confirm('Are you sure you want to delete this chat?')) return;
                
                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    await fetch(`/admin/ai-chat/${id}/delete`, {
                        method: 'POST',
                        headers: { 'X-CSRF-Token': csrfToken }
                    });
                    
                    this.chats = this.chats.filter(c => c.id !== id);
                    if (this.activeChatId === id) {
                        this.activeChatId = null;
                        this.messages = [];
                        if (this.chats.length > 0) this.selectChat(this.chats[0].id);
                    }
                } catch (e) {
                    window.adminAlert('Failed to delete chat', 'danger');
                }
            },

            async renameChat(id, newTitle) {
                if (!newTitle.trim()) return;
                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    await fetch(`/admin/ai-chat/${id}/rename`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': csrfToken },
                        body: JSON.stringify({ title: newTitle })
                    });
                    
                    const chat = this.chats.find(c => c.id === id);
                    if (chat) chat.title = newTitle;
                } catch (e) {
                    window.adminAlert('Failed to rename chat', 'danger');
                }
            },

            handlePaste(e) {
                const items = (e.clipboardData || e.originalEvent.clipboardData).items;
                for (let item of items) {
                    if (item.type.indexOf("image") === 0) {
                        const blob = item.getAsFile();
                        this.uploadFile(blob);
                    }
                }
            },

            handleFileUpload(e) {
                const files = e.target.files;
                for (let file of files) {
                    this.uploadFile(file);
                }
            },

            async uploadFile(file) {
                if (!file) return;
                this.uploading = true;
                this.uploadProgress = 0;

                const formData = new FormData();
                formData.append('file', file);
                formData.append('folder', 'ai-chat-tmp');

                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    
                    const response = await axios.post('/admin/media/upload', formData, {
                        headers: { 
                            'X-CSRF-Token': csrfToken,
                            'Content-Type': 'multipart/form-data'
                        },
                        onUploadProgress: (progressEvent) => {
                            this.uploadProgress = Math.round((progressEvent.loaded * 100) / progressEvent.total);
                        }
                    });

                    if (response.data && response.data.url) {
                        this.attachments.push(response.data.url);
                    }
                } catch (e) {
                    window.adminAlert('Upload failed: ' + (e.response?.data?.error || e.message), 'danger');
                } finally {
                    this.uploading = false;
                    this.uploadProgress = 0;
                }
            },

            getFileName(url) {
                try {
                    return url.split('/').pop().split('?')[0];
                } catch (e) {
                    return 'Attachment';
                }
            },

            isImage(url) {
                if (!url) return false;
                const ext = url.split('.').pop().split('?')[0].toLowerCase();
                return ['jpg', 'jpeg', 'png', 'gif', 'webp', 'svg', 'bmp'].includes(ext);
            },

            async exportChat(format = 'json') {
                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    const resp = await fetch('/admin/ai-chat/export', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': csrfToken },
                        body: JSON.stringify({ chatId: this.activeChatId, messages: this.messages, format })
                    });
                    
                    const blob = await resp.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    const ext = format === 'md' ? 'md' : (format === 'xlsx' ? 'xlsx' : (format === 'docx' ? 'docx' : 'json'));
                    a.download = `ai-chat-${Date.now()}.${ext}`;
                    a.click();
                } catch (e) {
                    window.adminAlert('Export failed', 'danger');
                }
            },

            renderMarkdown(text) {
                if (!text) return '';
                return marked.parse(text);
            },

            scrollToBottom() {
                this.$nextTick(() => {
                    const container = document.getElementById('ai-messages');
                    if (container) container.scrollTop = container.scrollHeight;
                });
            },

            async sendMessage() {
                if (this.loading || (!this.input.trim() && this.attachments.length === 0) || !this.model || !this.activeChatId) return;

                const userMsg = this.input;
                const userAtts = [...this.attachments];
                
                this.messages.push({ role: 'user', content: userMsg, images: userAtts });
                
                this.input = '';
                this.attachments = [];
                this.loading = true;
                this.scrollToBottom();

                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    const resp = await fetch('/admin/ai-chat/query', {
                        method: 'POST',
                        headers: { 
                            'Content-Type': 'application/json', 
                            'X-CSRF-Token': csrfToken 
                        },
                        body: JSON.stringify({
                            chatId: this.activeChatId,
                            provider: this.provider,
                            model: this.model,
                            question: userMsg,
                            images: userAtts
                        })
                    });

                    if (!resp.ok) {
                        const err = await resp.json();
                        throw new Error(err.error || 'Request failed');
                    }

                    const data = await resp.json();
                    
                    const currentChat = this.chats.find(c => c.id === this.activeChatId);
                    if (currentChat) {
                        currentChat.last_used_at = new Date().toISOString();
                        this.chats.sort((a,b) => new Date(b.last_used_at) - new Date(a.last_used_at));
                    }

                    this.messages.push({ role: 'assistant', content: data.message.content });
                } catch (e) {
                    this.messages.push({ role: 'assistant', content: `**Error:** ${e.message}` });
                } finally {
                    this.loading = false;
                    this.scrollToBottom();
                }
            }
        }
    }
</script>

