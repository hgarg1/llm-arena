<%- include('../../partials/admin_header') %>

<!-- Page Wrapper with Mission Control Theme -->
<div class="min-h-screen bg-slate-50 flex flex-col" x-data="aiChat()">
    
    <!-- Top Header -->
    <header class="px-8 py-4 bg-white border-b border-gray-200 flex justify-between items-center shrink-0 z-10 sticky top-0 shadow-sm">
        <div>
            <h1 class="text-xl font-bold text-gray-900 flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-600 to-violet-600 text-white flex items-center justify-center shadow-lg shadow-indigo-500/30">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                </div>
                Admin AI Command Center
            </h1>
            <p class="text-xs text-gray-500 mt-1 ml-14 font-medium">Real-time platform intelligence and control interface.</p>
        </div>
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-200 rounded-full shadow-sm">
                <span class="relative flex h-2 w-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                </span>
                <span class="text-xs font-bold text-gray-700 tracking-wide"><%= stats.systemHealth %> SYSTEM</span>
            </div>
        </div>
    </header>

    <!-- Content Scroller -->
    <div class="flex-1 overflow-y-auto">
        <div class="max-w-7xl mx-auto p-6 space-y-6">
            
            <!-- Top Section: Sidebar + Chat -->
            <div class="flex gap-6 h-[650px]">
                <!-- Left: Chat History Sidebar -->
                <aside class="w-64 bg-white rounded-xl shadow-sm border border-gray-200 flex flex-col shrink-0 overflow-hidden">
                    <div class="p-4 border-b border-gray-100 bg-gray-50/50">
                        <button @click="createNewChat()" class="w-full btn btn-primary flex items-center justify-center gap-2 shadow-sm transition-transform active:scale-95 text-sm py-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                            New Operation
                        </button>
                    </div>
                    
                    <div class="flex-1 overflow-y-auto p-2 space-y-1">
                        <template x-for="chat in chats" :key="chat.id">
                            <div class="group relative" x-data="{ editing: false, editTitle: chat.title }">
                                <button x-show="!editing" @click="selectChat(chat.id)" 
                                    class="w-full text-left p-3 rounded-lg text-sm transition-all duration-200 flex items-center gap-3 pr-10 border border-transparent"
                                    :class="activeChatId === chat.id ? 'bg-indigo-50 border-indigo-100 text-indigo-700 shadow-sm' : 'hover:bg-gray-50 text-gray-600 hover:border-gray-100'">
                                    <svg class="w-4 h-4 shrink-0 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" /></svg>
                                    <div class="flex-1 min-w-0">
                                        <div class="truncate font-medium" x-text="chat.title || 'New Chat'"></div>
                                        <div class="text-[10px] text-gray-400 truncate mt-0.5" x-text="new Date(chat.last_used_at).toLocaleDateString(undefined, { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' })"></div>
                                    </div>
                                </button>
                                
                                <div x-show="editing" class="p-2 bg-indigo-50 rounded-lg">
                                    <input type="text" x-model="editTitle" 
                                        @click.away="editing = false; editTitle = chat.title"
                                        @keydown.enter="renameChat(chat.id, editTitle); editing = false"
                                        @keydown.escape="editing = false; editTitle = chat.title"
                                        class="w-full text-xs px-2 py-1 rounded border-indigo-200 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none"
                                        autofocus>
                                </div>

                                <div x-show="!editing" class="absolute right-2 top-3 flex gap-1 opacity-0 group-hover:opacity-100 transition-all">
                                    <button @click.stop="editTitle = chat.title; editing = true; $nextTick(() => $el.parentElement.previousElementSibling.querySelector('input').focus())" class="p-1 rounded hover:bg-indigo-100 text-gray-400 hover:text-indigo-600" title="Rename">
                                         <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                                    </button>
                                    <button @click.stop="deleteChat(chat.id)" class="p-1 rounded hover:bg-rose-100 text-gray-400 hover:text-rose-600" title="Delete">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                                    </button>
                                </div>
                            </div>
                        </template>
                        <template x-if="chats.length === 0">
                            <div class="p-8 text-center text-gray-400 flex flex-col items-center">
                                <svg class="w-8 h-8 mb-2 opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" /></svg>
                                <span class="text-xs">No active logs</span>
                            </div>
                        </template>
                    </div>
                </aside>

                <!-- Center: Chat Interface -->
                <main class="flex-1 flex flex-col bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden relative">
                    <!-- Chat Header -->
                    <div class="px-6 py-3 border-b border-gray-100 flex justify-between items-center bg-gray-50/50 backdrop-blur">
                        <div>
                            <h2 class="font-bold text-gray-900 text-sm" x-text="currentChatTitle">Administrative AI</h2>
                            <div class="flex items-center gap-2 text-[10px] text-gray-500">
                                <span x-text="provider" class="font-mono uppercase bg-gray-200 px-1 py-0.5 rounded text-[9px]"></span>
                                <span class="text-gray-300">/</span>
                                <span x-text="model" class="font-mono text-[9px]"></span>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <% if (typeof can === 'function' && can('admin.ai_chat.export')) { %>
                            <div class="relative" x-data="{ open: false }" @click.outside="open = false">
                                <button @click="open = !open" class="btn btn-sm btn-white border-gray-200 flex items-center gap-2 text-[10px] font-bold py-1" title="Export History">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                                    Export
                                    <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                                </button>
                                <div x-show="open" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-100 z-50 py-1" x-transition style="display: none;">
                                    <button @click="exportChat('json'); open = false" class="block w-full text-left px-4 py-2 text-xs text-gray-700 hover:bg-gray-50">JSON (Raw)</button>
                                    <button @click="exportChat('md'); open = false" class="block w-full text-left px-4 py-2 text-xs text-gray-700 hover:bg-gray-50">Markdown (.md)</button>
                                    <button @click="exportChat('docx'); open = false" class="block w-full text-left px-4 py-2 text-xs text-gray-700 hover:bg-gray-50">Word (.docx)</button>
                                    <button @click="exportChat('xlsx'); open = false" class="block w-full text-left px-4 py-2 text-xs text-gray-700 hover:bg-gray-50">Excel (.xlsx)</button>
                                </div>
                            </div>
                            <% } %>
                            <div class="h-4 w-px bg-gray-200"></div>
                            <div class="flex gap-2">
                                <select x-model="provider" @change="fetchModels()" class="text-[10px] rounded-md border-gray-200 py-1 focus:ring-indigo-500 focus:border-indigo-500 bg-white">
                                    <% providers.forEach(p => { %>
                                        <option value="<%= p.id %>"><%= p.name %></option>
                                    <% }) %>
                                </select>
                                <select x-model="model" :disabled="modelsLoading" class="text-[10px] rounded-md border-gray-200 py-1 focus:ring-indigo-500 focus:border-indigo-500 min-w-[120px] bg-white">
                                    <template x-if="modelsLoading">
                                        <option>Loading...</option>
                                    </template>
                                    <template x-for="m in models" :key="m">
                                        <option :value="m" x-text="m"></option>
                                    </template>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Chat Canvas -->
                    <div class="flex-1 overflow-y-auto p-6 space-y-6 scroll-smooth bg-white/50" id="ai-messages" @paste="handlePaste($event)">
                        <!-- Welcome / Empty State -->
                        <div x-show="!activeChatId && !loading" class="h-full flex flex-col items-center justify-center text-center space-y-6 text-gray-400">
                            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center">
                                <svg class="w-10 h-10 opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" /></svg>
                            </div>
                            <div class="max-w-xs">
                                <h3 class="text-gray-900 font-semibold mb-2">Ready to assist</h3>
                                <p class="text-sm">Select an existing operation from the left or initialize a new session.</p>
                            </div>
                            <button @click="createNewChat()" class="btn btn-primary shadow-lg shadow-indigo-500/20 py-2">Initialize Session</button>
                        </div>

                        <template x-for="(msg, index) in messages" :key="index">
                            <div class="flex gap-4 animate-in fade-in slide-in-from-bottom-2 duration-300" :class="msg.role === 'user' ? 'flex-row-reverse' : ''">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 rounded-lg flex items-center justify-center shadow-sm" :class="msg.role === 'user' ? 'bg-indigo-600 text-white' : 'bg-white border border-gray-200 text-indigo-600'">
                                        <template x-if="msg.role === 'user'">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                                        </template>
                                        <template x-if="msg.role !== 'user'">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                                        </template>
                                    </div>
                                </div>
                                <div class="flex-1 max-w-[80%]" :class="msg.role === 'user' ? 'text-right' : ''">
                                    <div class="inline-block p-4 rounded-2xl text-sm leading-relaxed text-left shadow-sm" 
                                         :class="msg.role === 'user' ? 'bg-indigo-600 text-white rounded-tr-none shadow-indigo-500/20' : 'bg-gray-50 text-gray-800 border border-gray-100 rounded-tl-none'">
                                        <div x-html="renderMarkdown(msg.content)" class="prose prose-sm max-w-none" :class="msg.role === 'user' ? 'prose-invert' : ''"></div>
                                        <template x-if="msg.images && msg.images.length > 0">
                                            <div class="mt-3 flex flex-wrap gap-2">
                                                <template x-for="file in msg.images">
                                                    <div class="relative">
                                                        <template x-if="isImage(file)">
                                                            <img :src="file" class="max-w-[200px] rounded-lg border-2 border-white/20 shadow-sm cursor-zoom-in" @click="window.open(file)">
                                                        </template>
                                                        <template x-if="!isImage(file)">
                                                            <a :href="file" target="_blank" class="flex items-center gap-2 p-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg hover:bg-white/20 transition-colors">
                                                                <svg class="w-5 h-5" :class="msg.role === 'user' ? 'text-white' : 'text-gray-500'" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>
                                                                <span class="text-xs font-medium truncate max-w-[150px]" :class="msg.role === 'user' ? 'text-white' : 'text-gray-700'" x-text="getFileName(file)"></span>
                                                            </a>
                                                        </template>
                                                    </div>
                                                </template>
                                            </div>
                                        </template>
                                    </div>
                                    <div class="mt-1 text-[10px] text-gray-400 font-medium uppercase tracking-tighter" x-text="msg.role === 'user' ? 'You' : 'Assistant'"></div>
                                </div>
                            </div>
                        </template>

                        <div x-show="loading" class="flex gap-4 animate-pulse">
                            <div class="w-8 h-8 rounded-lg bg-white border border-gray-200 flex items-center justify-center text-indigo-400">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                            </div>
                            <div class="flex-1">
                                <div class="h-10 bg-gray-50 rounded-2xl rounded-tl-none w-2/3"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Input Area -->
                    <div class="p-4 border-t border-gray-100 bg-white z-10" x-show="activeChatId">
                        <div x-show="uploading" class="mb-2 h-1 bg-gray-100 rounded-full overflow-hidden">
                            <div class="h-full bg-indigo-600 transition-all duration-300" :style="{ width: uploadProgress + '%' }"></div>
                        </div>

                        <div x-show="attachments.length > 0" class="mb-3 flex flex-wrap gap-2">
                            <template x-for="(att, i) in attachments" :key="i">
                                <div class="relative group">
                                    <template x-if="isImage(att)">
                                        <img :src="att" class="w-16 h-16 object-cover rounded-lg border-2 border-indigo-100 shadow-md">
                                    </template>
                                    <template x-if="!isImage(att)">
                                        <div class="w-16 h-16 bg-white border-2 border-indigo-100 rounded-lg flex items-center justify-center shadow-md flex-col gap-1 p-2">
                                            <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>
                                            <span class="text-[8px] text-gray-500 truncate w-full text-center" x-text="getFileName(att)"></span>
                                        </div>
                                    </template>
                                    <button @click="attachments.splice(i, 1)" class="absolute -top-2 -right-2 bg-rose-500 text-white rounded-full p-0.5 opacity-0 group-hover:opacity-100 transition-opacity shadow-sm">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                                    </button>
                                </div>
                            </template>
                        </div>

                        <form @submit.prevent="sendMessage()" class="flex gap-3 relative">
                            <input type="file" x-ref="fileInput" @change="handleFileUpload($event)" class="hidden" accept=".jpg,.jpeg,.png,.gif,.webp,.pdf,.txt,.zip" multiple>
                            <button type="button" @click="$refs.fileInput.click()" class="p-3 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-xl transition-all">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                            </button>
                            <textarea 
                                x-model="input" 
                                @keydown.enter.prevent="if(!$event.shiftKey) sendMessage()"
                                placeholder="Ask a question..." 
                                class="flex-1 bg-gray-50 border-0 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-indigo-500 outline-none resize-none shadow-inner"
                                rows="1"></textarea>
                            <button 
                                type="submit" 
                                :disabled="loading || (!input.trim() && attachments.length === 0) || modelsLoading"
                                class="bg-indigo-600 text-white p-3 rounded-xl hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed transition-all shadow-md shadow-indigo-500/20 active:scale-95">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>
                            </button>
                        </form>
                    </div>
                </main>
            </div>

            <!-- Bottom Section: System Pulse -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pb-12">
                <!-- Queue Status -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 flex flex-col justify-between">
                    <div>
                        <h3 class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-4 flex items-center gap-2">
                            <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>
                            Queue Status
                        </h3>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">Active / Waiting</span>
                                <span class="text-sm font-mono font-bold text-indigo-600"><%= stats.queue.active %> / <%= stats.queue.waiting %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">Failed (24h)</span>
                                <span class="text-sm font-mono font-bold text-rose-600"><%= stats.queue.failed %></span>
                            </div>
                        </div>
                    </div>
                    <div class="w-full bg-gray-100 rounded-full h-1.5 mt-4 overflow-hidden">
                        <% const total = stats.queue.active + stats.queue.waiting + 1 %>
                        <div class="bg-indigo-500 h-1.5 rounded-full transition-all duration-500" style="width: <%= Math.min(100, (stats.queue.active / total) * 100) %>%"></div>
                    </div>
                </div>

                <!-- Platform Stats -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
                    <h3 class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-4 flex items-center gap-2">
                        <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                        Live Metrics
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="p-3 bg-slate-50 rounded-lg border border-slate-100 text-center">
                            <div class="text-xl font-bold text-slate-800"><%= stats.activeUsers %></div>
                            <div class="text-[9px] uppercase tracking-wide text-slate-500 mt-1">Active Users</div>
                        </div>
                        <div class="p-3 bg-slate-50 rounded-lg border border-slate-100 text-center">
                            <div class="text-xl font-bold text-emerald-600"><%= stats.activeMatches %></div>
                            <div class="text-[9px] uppercase tracking-wide text-slate-500 mt-1">Running</div>
                        </div>
                    </div>
                </div>

                <!-- Quick Prompts Widget -->
                <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-xl shadow-lg p-1 text-white flex flex-col relative overflow-hidden group">
                    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 mix-blend-soft-light pointer-events-none"></div>
                    
                    <div class="p-4 flex items-center justify-between border-b border-white/10 bg-white/5 backdrop-blur-sm">
                        <h3 class="text-xs font-bold uppercase tracking-widest text-indigo-100 flex items-center gap-2">
                            <svg class="w-4 h-4 text-cyan-300 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                            Command Deck
                        </h3>
                        <span class="text-[10px] bg-white/20 px-2 py-0.5 rounded text-indigo-50">AI Ready</span>
                    </div>

                    <div class="p-2 grid grid-cols-1 gap-1">
                        <button @click="quickAsk('Analyze the current match queue health and suggest optimizations based on failure rates and wait times.')" class="flex items-center gap-3 p-3 rounded-lg hover:bg-white/10 transition-all text-left group/btn border border-transparent hover:border-white/10">
                            <div class="w-8 h-8 rounded-lg bg-indigo-500/50 flex items-center justify-center text-indigo-100 group-hover/btn:bg-white group-hover/btn:text-indigo-600 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                            </div>
                            <div>
