<%- include('../../partials/admin_header') %>

<div class="h-[calc(100vh-120px)] flex flex-col" x-data="aiChat()">
    <!-- Header -->
    <div class="mb-6 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 tracking-tight flex items-center gap-2">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                Administrative AI Assistant
            </h1>
            <p class="mt-1 text-sm text-gray-500">Intelligent platform analysis and management support.</p>
        </div>
        
        <div class="flex items-center gap-3">
            <% if (typeof can === 'function' && can('admin.ai_chat.export')) { %>
            <button @click="exportChat()" class="btn btn-sm btn-white border-gray-200 flex items-center gap-2 text-xs font-bold" title="Export History">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                Export
            </button>
            <% } %>
            <div class="flex gap-3 bg-white p-1 rounded-lg border border-gray-200 shadow-sm">
                <select x-model="provider" @change="fetchModels()" class="text-xs font-semibold border-none focus:ring-0 bg-transparent">
                    <% providers.forEach(p => { %>
                        <option value="<%= p.id %>"><%= p.name %></option>
                    <% }) %>
                </select>
                <div class="w-px bg-gray-200 my-1"></div>
                <select x-model="model" :disabled="modelsLoading" class="text-xs font-semibold border-none focus:ring-0 bg-transparent disabled:opacity-50 min-w-[120px]">
                    <template x-if="modelsLoading">
                        <option>Loading...</option>
                    </template>
                    <template x-for="m in models" :key="m">
                        <option :value="m" x-text="m"></option>
                    </template>
                    <template x-if="!modelsLoading && models.length === 0">
                        <option>No chat models found</option>
                    </template>
                </select>
            </div>
        </div>
    </div>

    <!-- Chat Canvas -->
    <div class="flex-1 bg-white rounded-xl shadow-sm border border-gray-200 flex flex-col overflow-hidden relative" @paste="handlePaste($event)">
        <!-- Upload Progress -->
        <div x-show="uploading" class="absolute top-0 left-0 w-full h-1 bg-gray-100 z-50">
            <div class="h-full bg-indigo-600 transition-all duration-300" :style="{ width: uploadProgress + '%' }"></div>
        </div>

        <!-- Messages -->
        <div class="flex-1 overflow-y-auto p-6 space-y-6 scroll-smooth" id="ai-messages">
            <template x-if="messages.length === 0">
                <div class="h-full flex flex-col items-center justify-center text-center max-w-sm mx-auto space-y-4">
                    <div class="w-16 h-16 bg-indigo-50 rounded-full flex items-center justify-center text-indigo-600">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" /></svg>
                    </div>
                    <h2 class="font-bold text-gray-900">How can I help you today?</h2>
                    <p class="text-sm text-gray-500">I have access to system stats, user distributions, and model performance based on your current administrative permissions.</p>
                    <div class="grid grid-cols-1 gap-2 w-full pt-4">
                        <button @click="quickAsk('Give me a summary of user tier distribution.')" class="text-left px-4 py-2 text-xs bg-slate-50 hover:bg-slate-100 rounded-lg border border-slate-200 transition-colors">"Give me a summary of user tier distribution."</button>
                        <button @click="quickAsk('How many active models are currently in the registry?')" class="text-left px-4 py-2 text-xs bg-slate-50 hover:bg-slate-100 rounded-lg border border-slate-200 transition-colors">"How many active models are in the registry?"</button>
                        <button @click="quickAsk('Are there any pending access requests I should review?')" class="text-left px-4 py-2 text-xs bg-slate-50 hover:bg-slate-100 rounded-lg border border-slate-200 transition-colors">"Are there any pending access requests?"</button>
                    </div>
                </div>
            </template>

            <template x-for="(msg, index) in messages" :key="index">
                <div class="flex gap-4 animate-in fade-in slide-in-from-bottom-2 duration-300" :class="msg.role === 'user' ? 'flex-row-reverse' : ''">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" :class="msg.role === 'user' ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-600'">
                            <template x-if="msg.role === 'user'">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                            </template>
                            <template x-if="msg.role !== 'user'">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                            </template>
                        </div>
                    </div>
                    <div class="flex-1 max-w-[80%]" :class="msg.role === 'user' ? 'text-right' : ''">
                        <div class="inline-block p-4 rounded-2xl text-sm leading-relaxed text-left" 
                             :class="msg.role === 'user' ? 'bg-indigo-600 text-white rounded-tr-none' : 'bg-slate-50 text-gray-800 border border-slate-100 rounded-tl-none'">
                            <div x-html="renderMarkdown(msg.content)"></div>
                            <template x-if="msg.images && msg.images.length > 0">
                                <div class="mt-3 flex flex-wrap gap-2">
                                    <template x-for="img in msg.images">
                                        <img :src="img" class="max-w-[200px] rounded-lg border border-white shadow-sm cursor-zoom-in" @click="window.open(img)">
                                    </template>
                                </div>
                            </template>
                        </div>
                        <div class="mt-1 text-[10px] text-gray-400 font-medium uppercase tracking-tighter" x-text="msg.role === 'user' ? 'You' : 'Assistant'"></div>
                    </div>
                </div>
            </template>

            <div x-show="loading" class="flex gap-4 animate-pulse">
                <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                </div>
                <div class="flex-1">
                    <div class="h-10 bg-slate-50 rounded-2xl rounded-tl-none w-2/3"></div>
                </div>
            </div>
        </div>

        <!-- Input Area -->
        <div class="p-4 border-t border-gray-100 bg-gray-50/50">
            <!-- Image Previews -->
            <div x-show="attachments.length > 0" class="mb-3 flex flex-wrap gap-2">
                <template x-for="(att, i) in attachments" :key="i">
                    <div class="relative group">
                        <img :src="att" class="w-16 h-16 object-cover rounded-lg border-2 border-white shadow-md">
                        <button @click="attachments.splice(i, 1)" class="absolute -top-2 -right-2 bg-rose-500 text-white rounded-full p-0.5 opacity-0 group-hover:opacity-100 transition-opacity shadow-sm">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                        </button>
                    </div>
                </template>
            </div>

            <form @submit.prevent="sendMessage()" class="flex gap-3 relative">
                <input type="file" x-ref="fileInput" @change="handleFileUpload($event)" class="hidden" accept="image/*" multiple>
                <button type="button" @click="$refs.fileInput.click()" class="p-3 text-gray-400 hover:text-indigo-600 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                </button>
                <textarea 
                    x-model="input" 
                    @keydown.enter.prevent="if(!$event.shiftKey) sendMessage()"
                    placeholder="Ask a question or paste an image..." 
                    class="flex-1 bg-white border border-gray-200 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none resize-none shadow-sm"
                    rows="1"></textarea>
                <button 
                    type="submit" 
                    :disabled="loading || (!input.trim() && attachments.length === 0) || modelsLoading"
                    class="bg-indigo-600 text-white p-3 rounded-xl hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed transition-all shadow-md shadow-indigo-500/20">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>
                </button>
            </form>
            <div class="mt-2 flex justify-between items-center px-1">
                <p class="text-[10px] text-gray-400">AI responses are based on your current admin context.</p>
                <button @click="messages = []" class="text-[10px] font-bold text-gray-500 hover:text-red-600 transition-colors uppercase tracking-widest">Clear Conversation</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    function aiChat() {
        return {
            messages: [],
            input: '',
            loading: false,
            modelsLoading: false,
            uploading: false,
            uploadProgress: 0,
            attachments: [],
            provider: 'openai',
            model: '',
            models: [],
            providers: <%- JSON.stringify(providers) %>,

            init() {
                this.fetchModels();
            },

            async fetchModels() {
                this.modelsLoading = true;
                this.models = [];
                try {
                    const resp = await fetch(`/admin/ai-chat/models/${this.provider}`);
                    const data = await resp.json();
                    this.models = data.models || [];
                    if (this.models.length > 0) {
                        this.model = this.models[0];
                    } else {
                        this.model = '';
                    }
                } catch (e) {
                    console.error('Failed to fetch models', e);
                } finally {
                    this.modelsLoading = false;
                }
            },

            handlePaste(e) {
                const items = (e.clipboardData || e.originalEvent.clipboardData).items;
                for (let item of items) {
                    if (item.type.indexOf("image") === 0) {
                        const blob = item.getAsFile();
                        this.uploadFile(blob);
                    }
                }
            },

            handleFileUpload(e) {
                const files = e.target.files;
                for (let file of files) {
                    this.uploadFile(file);
                }
            },

            async uploadFile(file) {
                if (!file) return;
                this.uploading = true;
                this.uploadProgress = 0;

                const formData = new FormData();
                formData.append('file', file);
                formData.append('folder', 'ai-chat-tmp');

                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    
                    const response = await axios.post('/admin/media/upload', formData, {
                        headers: { 
                            'X-CSRF-Token': csrfToken,
                            'Content-Type': 'multipart/form-data'
                        },
                        onUploadProgress: (progressEvent) => {
                            this.uploadProgress = Math.round((progressEvent.loaded * 100) / progressEvent.total);
                        }
                    });

                    if (response.data && response.data.url) {
                        this.attachments.push(response.data.url);
                    }
                } catch (e) {
                    window.adminAlert('Upload failed: ' + (e.response?.data?.error || e.message), 'danger');
                } finally {
                    this.uploading = false;
                    this.uploadProgress = 0;
                }
            },

            async exportChat() {
                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    const resp = await fetch('/admin/ai-chat/export', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': csrfToken },
                        body: JSON.stringify({ messages: this.messages })
                    });
                    
                    const blob = await resp.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `ai-chat-${Date.now()}.json`;
                    a.click();
                } catch (e) {
                    window.adminAlert('Export failed', 'danger');
                }
            },

            quickAsk(text) {
                this.input = text;
                this.sendMessage();
            },

            renderMarkdown(text) {
                if (!text) return '';
                return marked.parse(text);
            },

            async sendMessage() {
                if (this.loading || (!this.input.trim() && this.attachments.length === 0) || !this.model) return;

                const userMsg = this.input;
                const userAtts = [...this.attachments];
                this.messages.push({ role: 'user', content: userMsg, images: userAtts });
                
                this.input = '';
                this.attachments = [];
                this.loading = true;

                // Auto-scroll
                this.$nextTick(() => {
                    const container = document.getElementById('ai-messages');
                    if (container) container.scrollTop = container.scrollHeight;
                });

                try {
                    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
                    const resp = await fetch('/admin/ai-chat/query', {
                        method: 'POST',
                        headers: { 
                            'Content-Type': 'application/json', 
                            'X-CSRF-Token': csrfToken 
                        },
                        body: JSON.stringify({
                            provider: this.provider,
                            model: this.model,
                            question: userMsg,
                            images: userAtts,
                            history: this.messages.slice(0, -1)
                        })
                    });

                    if (!resp.ok) {
                        const err = await resp.json();
                        throw new Error(err.error || 'Request failed');
                    }

                    const data = await resp.json();
                    this.messages.push({ role: 'assistant', content: data.response });
                } catch (e) {
                    this.messages.push({ role: 'assistant', content: `**Error:** ${e.message}` });
                } finally {
                    this.loading = false;
                    this.$nextTick(() => {
                        const container = document.getElementById('ai-messages');
                        if (container) container.scrollTop = container.scrollHeight;
                    });
                }
            }
        }
    }
</script>

<%- include('../../partials/admin_footer') %>