<%- include('../../partials/admin_header') %>
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Audit Log</h1>
        <p class="text-sm text-gray-500">Monitor system actions, failed access attempts, and configuration changes.</p>
    </div>

    <% if (success) { %>
        <div class="mb-6 rounded-md bg-green-50 p-4 border border-green-200 text-green-700 text-sm"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="mb-6 rounded-md bg-red-50 p-4 border border-red-200 text-red-700 text-sm"><%= error %></div>
    <% } %>

    <div class="grid md:grid-cols-3 gap-4 mb-6">
        <div class="rounded-lg border border-gray-200 bg-white p-4">
            <div class="text-xs uppercase tracking-widest text-gray-500">Total Logs</div>
            <div class="mt-2 text-2xl font-bold text-gray-900"><%= stats.totalCount %></div>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4">
            <div class="text-xs uppercase tracking-widest text-gray-500">Denied Attempts</div>
            <div class="mt-2 text-2xl font-bold text-red-600"><%= stats.deniedCount %></div>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4">
            <div class="text-xs uppercase tracking-widest text-gray-500">Recent Items</div>
            <div class="mt-2 text-2xl font-bold text-gray-900"><%= logs.length %></div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
        <div class="flex flex-wrap gap-2 mb-4 text-xs">
            <a href="/admin/audit?action=access.denied" class="px-3 py-1 rounded-full border border-red-200 text-red-700 bg-red-50">Denied attempts</a>
            <a href="/admin/audit?action=access.request" class="px-3 py-1 rounded-full border border-amber-200 text-amber-700 bg-amber-50">Access requests</a>
            <a href="/admin/audit?action=rbac.role.permissions.update" class="px-3 py-1 rounded-full border border-slate-200 text-slate-700 bg-slate-50">RBAC changes</a>
            <a href="/admin/audit" class="px-3 py-1 rounded-full border border-slate-200 text-slate-700 bg-white">Clear filters</a>
        </div>
        <form action="/admin/audit" method="GET" class="grid md:grid-cols-4 gap-3 items-end">
            <div class="md:col-span-2">
                <label class="text-xs font-medium text-gray-600">Search</label>
                <input type="text" name="q" value="<%= query.q || '' %>" placeholder="action, target, admin email" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
            </div>
            <div>
                <label class="text-xs font-medium text-gray-600">Action</label>
                <select name="action" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    <option value="">All</option>
                    <% actions.forEach(action => { %>
                        <option value="<%= action %>" <%= query.action === action ? 'selected' : '' %>><%= action %></option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label class="text-xs font-medium text-gray-600">Admin</label>
                <select name="admin" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    <option value="">All</option>
                    <% admins.forEach(admin => { %>
                        <option value="<%= admin.id %>" <%= query.admin === admin.id ? 'selected' : '' %>><%= admin.email %></option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label class="text-xs font-medium text-gray-600">From</label>
                <input type="date" name="from" value="<%= query.from || '' %>" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
            </div>
            <div>
                <label class="text-xs font-medium text-gray-600">To</label>
                <input type="date" name="to" value="<%= query.to || '' %>" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded text-sm">
            </div>
            <div class="flex gap-2">
                <button class="btn btn-sm btn-secondary">Filter</button>
                <% if (typeof can === 'function' && can('admin.audit.export')) { %>
                    <a href="/admin/audit/export?<%= Object.keys(query).map(key => `${key}=${encodeURIComponent(query[key])}`).join('&') %>" class="btn btn-sm btn-ghost">Export Excel</a>
                <% } %>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
        <table class="min-w-full text-xs">
            <thead class="text-gray-500 uppercase bg-gray-50">
                <tr>
                    <th class="p-3 text-left">Time</th>
                    <th class="p-3 text-left">Admin</th>
                    <th class="p-3 text-left">Action</th>
                    <th class="p-3 text-left">Target</th>
                    <th class="p-3 text-left">Metadata</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                <% logs.forEach(log => { %>
                    <tr>
                        <td class="p-3 text-[11px] text-gray-500"><%= new Date(log.created_at).toLocaleString() %></td>
                        <td class="p-3 text-sm text-gray-800"><%= log.admin?.email || 'Unknown' %></td>
                        <td class="p-3">
                            <span class="text-[11px] font-medium px-2 py-1 rounded <%= log.action === 'access.denied' ? 'bg-red-100 text-red-700' : 'bg-slate-100 text-slate-700' %>"><%= log.action %></span>
                        </td>
                        <td class="p-3 text-[11px] text-gray-600"><%= log.target || '-' %></td>
                        <td class="p-3 text-[11px] text-gray-500 font-mono break-all"><%= JSON.stringify(log.metadata || {}) %></td>
                    </tr>
                <% }) %>
                <% if (logs.length === 0) { %>
                    <tr><td class="p-6 text-center text-gray-500" colspan="5">No audit events found.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
<%- include('../../partials/admin_footer') %>
