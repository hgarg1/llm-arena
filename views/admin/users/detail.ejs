<%- include('../../partials/admin_header') %>
    <div class="mb-6">
        <a href="/admin/users" class="text-sm text-gray-500 hover:text-gray-900 mb-2 inline-block">&larr; Back to Users</a>
        <h1 class="text-2xl font-bold text-gray-900">User Details</h1>
        <p class="text-sm text-gray-500"><%= user.email %></p>
    </div>

    <% if (success) { %>
        <div class="mb-6 rounded-md bg-green-50 p-4 border border-green-200 text-green-700 text-sm"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="mb-6 rounded-md bg-red-50 p-4 border border-red-200 text-red-700 text-sm"><%= error %></div>
    <% } %>

    <div class="grid lg:grid-cols-3 gap-6">
        
        <!-- Left: Profile Info -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
                    <h3 class="font-bold text-gray-900">Profile Information</h3>
                    <% if (user.banned) { %>
                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-bold rounded">BANNED</span>
                    <% } else { %>
                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-bold rounded">ACTIVE</span>
                    <% } %>
                </div>
                <div class="p-6 grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">ID</label>
                        <p class="text-sm font-mono text-gray-900 truncate" title="<%= user.id %>"><%= user.id %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Joined</label>
                        <p class="text-sm text-gray-900"><%= new Date(user.created_at).toLocaleString() %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Name</label>
                        <p class="text-sm text-gray-900"><%= user.name || '-' %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Role</label>
                        <p class="text-sm text-gray-900"><%= user.role %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Company</label>
                        <p class="text-sm text-gray-900"><%= user.company || '-' %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Tier</label>
                        <p class="text-sm text-gray-900"><%= user.tier %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Plan</label>
                        <p class="text-sm text-gray-900"><%= user.plan ? user.plan.name : 'No Plan' %></p>
                    </div>
                </div>
            </div>

            <!-- Edit User -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Edit User</h3>
                </div>
                <% if (typeof can === 'function' && can('admin.users.edit')) { %>
                <form action="/admin/users/<%= user.id %>/update" method="POST" class="p-6 grid grid-cols-2 gap-4">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="col-span-2">
                        <label class="block text-xs font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" name="email" value="<%= user.email %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Full Name</label>
                        <input type="text" name="name" value="<%= user.name || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Job Title</label>
                        <input type="text" name="job_title" value="<%= user.job_title || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Company</label>
                        <input type="text" name="company" value="<%= user.company || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Phone</label>
                        <input type="text" name="phone" value="<%= user.phone || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Role</label>
                        <select name="role" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <option value="USER" <%= user.role === 'USER' ? 'selected' : '' %>>USER</option>
                            <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %>>ADMIN</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Subscription Plan</label>
                        <select name="plan_id" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <option value="">No plan</option>
                            <% plans.forEach(plan => { %>
                                <option value="<%= plan.id %>" <%= user.plan_id === plan.id ? 'selected' : '' %>><%= plan.name %></option>
                            <% }) %>
                        </select>
                        <div class="text-[11px] text-gray-500 mt-1">Tier is derived from the selected plan.</div>
                    </div>
                    <div class="col-span-2 grid grid-cols-3 gap-3">
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="email_verified" class="rounded border-gray-300" <%= user.email_verified ? 'checked' : '' %>>
                            Email verified
                        </label>
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="phone_verified" class="rounded border-gray-300" <%= user.phone_verified ? 'checked' : '' %>>
                            Phone verified
                        </label>
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="banned" class="rounded border-gray-300" <%= user.banned ? 'checked' : '' %>>
                            Banned
                        </label>
                    </div>
                    <div class="col-span-2 text-right">
                        <button class="btn btn-sm btn-primary">Save Changes</button>
                    </div>
                </form>
                <% } else { %>
                <div class="p-6 text-sm text-gray-500">You do not have permission to edit users.</div>
                <% } %>
            </div>

            <!-- Chat & Notification Settings (Admin Overrides) -->
            <% if (typeof can === 'function' && can('admin.users.chat_settings')) { %>
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Chat & Notification Settings</h3>
                    <p class="text-[10px] text-gray-500 uppercase tracking-wider">Admin Override</p>
                </div>
                <form action="/admin/users/<%= user.id %>/update" method="POST" class="p-6 space-y-6">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-100 hover:bg-gray-50 transition-colors cursor-pointer">
                                <input type="checkbox" name="chat_notifications_enabled" value="on" class="mt-1 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" <%= user.chat_notifications_enabled ? 'checked' : '' %>>
                                <div>
                                    <span class="text-sm font-semibold text-gray-900 block">Enable Notifications</span>
                                    <span class="text-[10px] text-gray-500 block">Toast alerts for new messages.</span>
                                </div>
                            </label>

                            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-100 hover:bg-gray-50 transition-colors cursor-pointer">
                                <input type="checkbox" name="chat_notifications_sound" value="on" class="mt-1 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" <%= user.chat_notifications_sound ? 'checked' : '' %>>
                                <div>
                                    <span class="text-sm font-semibold text-gray-900 block">Notification Sound</span>
                                    <span class="text-[10px] text-gray-500 block">Audible alerts.</span>
                                </div>
                            </label>
                        </div>

                        <div class="space-y-4">
                            <div>
                                <label class="block text-xs font-semibold text-gray-700 mb-1">Anti-Spam Delay (seconds)</label>
                                <input type="number" name="chat_notifications_rate_limit" value="<%= user.chat_notifications_rate_limit || 5 %>" min="0" max="60" class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:ring-2 focus:ring-indigo-500">
                            </div>

                            <label class="flex items-start gap-3 p-3 rounded-lg border border-gray-100 hover:bg-gray-50 transition-colors cursor-pointer">
                                <input type="checkbox" name="chat_presence_visible" value="on" class="mt-1 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" <%= user.chat_presence_visible ? 'checked' : '' %>>
                                <div>
                                    <span class="text-sm font-semibold text-gray-900 block">Presence Visibility</span>
                                    <span class="text-[10px] text-gray-500 block">Online status visible to others.</span>
                                </div>
                            </label>
                        </div>
                    </div>
                    <div class="text-right pt-4 border-t border-gray-50">
                        <button class="btn btn-sm btn-primary">Update Chat Settings</button>
                    </div>
                </form>
            </div>
            <% } %>

            <!-- Recent Matches -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Recent Matches (<%= user._count.matches %>)</h3>
                </div>
                <table class="min-w-full divide-y divide-gray-200">
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (user.matches.length > 0) { %>
                            <% user.matches.map(m => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-3 whitespace-nowrap text-xs font-mono text-blue-600">
                                        <a href="/matches/<%= m.id %>"><%= m.id.substring(0,8) %></a>
                                    </td>
                                    <td class="px-6 py-3 whitespace-nowrap text-xs text-gray-900"><%= m.game_type %></td>
                                    <td class="px-6 py-3 whitespace-nowrap text-xs text-gray-500"><%= new Date(m.created_at).toLocaleDateString() %></td>
                                    <td class="px-6 py-3 whitespace-nowrap text-right text-xs">
                                        <span class="px-2 inline-flex text-[10px] leading-4 font-semibold rounded-full <%= m.status === 'COMPLETED' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                            <%= m.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td class="px-6 py-4 text-sm text-gray-500 text-center">No matches found</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Right: Actions -->
        <div class="lg:col-span-1 space-y-6">
            
            <!-- Security Actions -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Security</h3>
                </div>
                <div class="p-6 space-y-6">
                    <% if (typeof can === 'function' && can('admin.users.password_reset')) { %>
                    <form action="/admin/users/<%= user.id %>/password" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label class="block text-xs font-medium text-gray-700 mb-1">Reset Password</label>
                        <div class="flex gap-2">
                            <input type="password" name="password" required placeholder="New Password" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <button class="btn btn-sm btn-secondary">Update</button>
                        </div>
                    </form>
                    <% } %>

                    <div class="border-t border-gray-100 pt-4">
                        <label class="block text-xs font-medium text-gray-700 mb-2">Two-Factor Authentication</label>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500"><%= user.phone_verified ? 'Enabled' : 'Disabled' %></span>
                            <% if (user.phone_verified && typeof can === 'function' && can('admin.users.2fa_reset')) { %>
                                <form action="/admin/users/<%= user.id %>/reset-2fa" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="text-xs text-red-600 hover:text-red-800 font-medium" data-confirm="Reset 2FA for this user?">Reset/Disable</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- API Keys -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">API Keys (<%= user.api_keys.length %>)</h3>
                </div>
                <div class="p-4 space-y-2">
                    <% if (user.api_keys.length > 0) { %>
                        <% user.api_keys.map(k => { %>
                            <div class="flex flex-col md:flex-row md:items-center md:justify-between text-xs border border-gray-100 p-3 rounded gap-3">
                                <div>
                                    <div class="font-medium text-gray-700"><%= k.name %></div>
                                    <div class="text-[10px] text-gray-500 font-mono">sk-<%= k.prefix || k.key_hash.substring(0, 8) %>••••••••</div>
                                    <div class="text-[10px] text-gray-400">Created <%= new Date(k.created_at).toLocaleDateString() %></div>
                                    <div class="mt-2 flex flex-wrap gap-2 text-[10px]">
                                        <span class="px-2 py-0.5 rounded-full <%= k.status === 'ACTIVE' ? 'bg-emerald-100 text-emerald-700' : (k.status === 'SUSPENDED' ? 'bg-amber-100 text-amber-700' : 'bg-gray-200 text-gray-600') %>"><%= k.status %></span>
                                        <% (k.scopes || []).forEach(scope => { %>
                                            <span class="px-2 py-0.5 rounded-full bg-slate-100 text-slate-600"><%= scope.scope_key %></span>
                                        <% }) %>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2">
                                    <% if (typeof can === 'function' && can('admin.api_keys.edit')) { %>
                                        <button type="button" class="text-xs text-blue-600 hover:underline" data-action="edit-api-key" data-id="<%= k.id %>" data-name="<%= k.name %>" data-status="<%= k.status %>" data-scopes="<%= (k.scopes || []).map(s => s.scope_key).join(',') %>">Edit</button>
                                    <% } %>
                                    <% if (typeof can === 'function' && can('admin.api_keys.revoke')) { %>
                                        <form action="/admin/api-keys/<%= k.id %>/revoke" method="POST" data-confirm="Revoke this API key?">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button class="text-xs text-red-600 hover:underline">Revoke</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-xs text-gray-500 italic">No active keys</p>
                    <% } %>
                </div>
            </div>

        </div>
    </div>
<%- include('../../partials/admin_footer') %>
<div id="apiKeyModal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-lg border border-gray-200">
            <div class="px-4 py-3 border-b border-gray-200 flex items-center justify-between">
                <div>
                    <div class="text-xs uppercase tracking-widest text-gray-400">API Key</div>
                    <div id="apiKeyModalTitle" class="font-semibold text-gray-900">Edit API Key</div>
                </div>
                <button type="button" class="text-xs uppercase tracking-widest text-gray-500" data-action="close-api-modal">Close</button>
            </div>
            <form id="apiKeyModalForm" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="p-4 space-y-3">
                    <div>
                        <label class="text-xs font-medium text-gray-600">Status</label>
                        <select id="apiKeyStatus" name="status" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <option value="ACTIVE">ACTIVE</option>
                            <option value="SUSPENDED">SUSPENDED</option>
                            <option value="REVOKED">REVOKED</option>
                        </select>
                    </div>
                    <div>
                        <label class="text-xs font-medium text-gray-600">Scopes</label>
                        <div class="grid md:grid-cols-2 gap-2 text-xs mt-2">
                            <% (apiKeyScopes || []).forEach(scope => { %>
                                <label class="flex items-center gap-2">
                                    <input type="checkbox" name="scopes" value="<%= scope.key %>" class="rounded border-gray-300 api-scope">
                                    <span><%= scope.label %></span>
                                </label>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <div class="px-4 py-3 border-t border-gray-200 flex justify-end gap-2">
                    <button type="button" class="btn btn-sm btn-ghost" data-action="close-api-modal">Cancel</button>
                    <button class="btn btn-sm btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    (function () {
        document.querySelectorAll('[data-confirm]').forEach(button => {
            button.addEventListener('click', (event) => {
                const message = button.getAttribute('data-confirm') || 'Are you sure?';
                if (!confirm(message)) {
                    event.preventDefault();
                }
            });
        });

        const modal = document.getElementById('apiKeyModal');
        const modalForm = document.getElementById('apiKeyModalForm');
        const modalTitle = document.getElementById('apiKeyModalTitle');
        const statusSelect = document.getElementById('apiKeyStatus');

        document.querySelectorAll('[data-action="edit-api-key"]').forEach(button => {
            button.addEventListener('click', () => {
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name') || 'API Key';
                const status = button.getAttribute('data-status') || 'ACTIVE';
                const scopes = (button.getAttribute('data-scopes') || '').split(',').filter(Boolean);
                if (modalTitle) modalTitle.textContent = name;
                if (statusSelect) statusSelect.value = status;
                if (modalForm) modalForm.action = `/admin/api-keys/${id}/update`;
                document.querySelectorAll('.api-scope').forEach(input => {
                    input.checked = scopes.includes(input.value);
                });
                if (modal) modal.classList.remove('hidden');
            });
        });

        document.querySelectorAll('[data-action="close-api-modal"]').forEach(btn => {
            btn.addEventListener('click', () => {
                if (modal) modal.classList.add('hidden');
            });
        });
    })();
</script>
