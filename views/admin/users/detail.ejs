<%- include('../../partials/admin_header') %>
    <div class="mb-6">
        <a href="/admin/users" class="text-sm text-gray-500 hover:text-gray-900 mb-2 inline-block">&larr; Back to Users</a>
        <h1 class="text-2xl font-bold text-gray-900">User Details</h1>
        <p class="text-sm text-gray-500"><%= user.email %></p>
    </div>

    <% if (success) { %>
        <div class="mb-6 rounded-md bg-green-50 p-4 border border-green-200 text-green-700 text-sm"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="mb-6 rounded-md bg-red-50 p-4 border border-red-200 text-red-700 text-sm"><%= error %></div>
    <% } %>

    <div class="grid lg:grid-cols-3 gap-6">
        
        <!-- Left: Profile Info -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
                    <h3 class="font-bold text-gray-900">Profile Information</h3>
                    <% if (user.banned) { %>
                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-bold rounded">BANNED</span>
                    <% } else { %>
                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-bold rounded">ACTIVE</span>
                    <% } %>
                </div>
                <div class="p-6 grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">ID</label>
                        <p class="text-sm font-mono text-gray-900 truncate" title="<%= user.id %>"><%= user.id %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Joined</label>
                        <p class="text-sm text-gray-900"><%= new Date(user.created_at).toLocaleString() %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Name</label>
                        <p class="text-sm text-gray-900"><%= user.name || '-' %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Role</label>
                        <p class="text-sm text-gray-900"><%= user.role %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Company</label>
                        <p class="text-sm text-gray-900"><%= user.company || '-' %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Tier</label>
                        <p class="text-sm text-gray-900"><%= user.tier %></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase">Plan</label>
                        <p class="text-sm text-gray-900"><%= user.plan ? user.plan.name : 'No Plan' %></p>
                    </div>
                </div>
            </div>

            <!-- Edit User -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Edit User</h3>
                </div>
                <% if (typeof can === 'function' && can('admin.users.edit')) { %>
                <form action="/admin/users/<%= user.id %>/update" method="POST" class="p-6 grid grid-cols-2 gap-4">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="col-span-2">
                        <label class="block text-xs font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" name="email" value="<%= user.email %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Full Name</label>
                        <input type="text" name="name" value="<%= user.name || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Job Title</label>
                        <input type="text" name="job_title" value="<%= user.job_title || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Company</label>
                        <input type="text" name="company" value="<%= user.company || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Phone</label>
                        <input type="text" name="phone" value="<%= user.phone || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Role</label>
                        <select name="role" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <option value="USER" <%= user.role === 'USER' ? 'selected' : '' %>>USER</option>
                            <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %>>ADMIN</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Subscription Plan</label>
                        <select name="plan_id" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <option value="">No plan</option>
                            <% plans.forEach(plan => { %>
                                <option value="<%= plan.id %>" <%= user.plan_id === plan.id ? 'selected' : '' %>><%= plan.name %></option>
                            <% }) %>
                        </select>
                        <div class="text-[11px] text-gray-500 mt-1">Tier is derived from the selected plan.</div>
                    </div>
                    <div class="col-span-2 grid grid-cols-3 gap-3">
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="email_verified" class="rounded border-gray-300" <%= user.email_verified ? 'checked' : '' %>>
                            Email verified
                        </label>
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="phone_verified" class="rounded border-gray-300" <%= user.phone_verified ? 'checked' : '' %>>
                            Phone verified
                        </label>
                        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input type="checkbox" name="banned" class="rounded border-gray-300" <%= user.banned ? 'checked' : '' %>>
                            Banned
                        </label>
                    </div>
                    <div class="col-span-2 text-right">
                        <button class="btn btn-sm btn-primary">Save Changes</button>
                    </div>
                </form>
                <% } else { %>
                <div class="p-6 text-sm text-gray-500">You do not have permission to edit users.</div>
                <% } %>
            </div>

            <!-- Recent Matches -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Recent Matches (<%= user._count.matches %>)</h3>
                </div>
                <table class="min-w-full divide-y divide-gray-200">
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (user.matches.length > 0) { %>
                            <% user.matches.map(m => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-3 whitespace-nowrap text-xs font-mono text-blue-600">
                                        <a href="/matches/<%= m.id %>"><%= m.id.substring(0,8) %></a>
                                    </td>
                                    <td class="px-6 py-3 whitespace-nowrap text-xs text-gray-900"><%= m.game_type %></td>
                                    <td class="px-6 py-3 whitespace-nowrap text-xs text-gray-500"><%= new Date(m.created_at).toLocaleDateString() %></td>
                                    <td class="px-6 py-3 whitespace-nowrap text-right text-xs">
                                        <span class="px-2 inline-flex text-[10px] leading-4 font-semibold rounded-full <%= m.status === 'COMPLETED' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                            <%= m.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td class="px-6 py-4 text-sm text-gray-500 text-center">No matches found</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Right: Actions -->
        <div class="lg:col-span-1 space-y-6">
            
            <!-- Security Actions -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">Security</h3>
                </div>
                <div class="p-6 space-y-6">
                    <% if (typeof can === 'function' && can('admin.users.password_reset')) { %>
                    <form action="/admin/users/<%= user.id %>/password" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label class="block text-xs font-medium text-gray-700 mb-1">Reset Password</label>
                        <div class="flex gap-2">
                            <input type="password" name="password" required placeholder="New Password" class="w-full px-3 py-2 border border-gray-300 rounded text-sm">
                            <button class="btn btn-sm btn-secondary">Update</button>
                        </div>
                    </form>
                    <% } %>

                    <div class="border-t border-gray-100 pt-4">
                        <label class="block text-xs font-medium text-gray-700 mb-2">Two-Factor Authentication</label>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500"><%= user.phone_verified ? 'Enabled' : 'Disabled' %></span>
                            <% if (user.phone_verified && typeof can === 'function' && can('admin.users.2fa_reset')) { %>
                                <form action="/admin/users/<%= user.id %>/reset-2fa" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="text-xs text-red-600 hover:text-red-800 font-medium" data-confirm="Reset 2FA for this user?">Reset/Disable</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- API Keys -->
            <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="font-bold text-gray-900">API Keys (<%= user.api_keys.length %>)</h3>
                </div>
                <div class="p-4 space-y-2">
                    <% if (user.api_keys.length > 0) { %>
                        <% user.api_keys.map(k => { %>
                            <div class="flex justify-between items-center text-xs border border-gray-100 p-2 rounded">
                                <span class="font-medium text-gray-700"><%= k.name %></span>
                                <span class="text-gray-400 text-[10px]"><%= new Date(k.created_at).toLocaleDateString() %></span>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-xs text-gray-500 italic">No active keys</p>
                    <% } %>
                </div>
            </div>

        </div>
    </div>
<%- include('../../partials/admin_footer') %>
<script>
    (function () {
        document.querySelectorAll('[data-confirm]').forEach(button => {
            button.addEventListener('click', (event) => {
                const message = button.getAttribute('data-confirm') || 'Are you sure?';
                if (!confirm(message)) {
                    event.preventDefault();
                }
            });
        });
    })();
</script>
