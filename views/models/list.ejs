<%- include('../partials/header_layout') %>
    <div class="container py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold mb-2">Registered Models</h1>
            <p class="text-secondary">Library of AI agents available for evaluation.</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% models.forEach(model => { %>
                <div class="card hover:shadow-md transition-shadow">
                    <div class="card-header pb-2">
                        <div class="flex justify-between items-start">
                            <h3 class="text-lg font-bold"><%= model.name %></h3>
                            <span class="badge badge-neutral"><%= model.api_provider %></span>
                        </div>
                    </div>
                    <div class="card-body py-4">
                        <p class="text-secondary text-sm line-clamp-3 mb-4 min-h-[3rem]">
                            <%= model.description || 'No description provided.' %>
                        </p>
                        <div class="text-xs text-secondary font-mono bg-gray-50 p-2 rounded truncate">
                            ID: <%= model.api_model_id %>
                        </div>
                    </div>
                    <div class="card-footer pt-3 bg-transparent border-t-0">
                        <a href="/models/<%= model.id %>" class="text-sm font-medium text-accent hover:underline">View Details &rarr;</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
<%- include('../partials/footer_layout') %>